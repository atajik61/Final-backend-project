<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>notification</title>

  <link rel="stylesheet" href="/css/style.css" />
  <link rel="icon" href="/images/building.svg" />
  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
  />
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
    crossorigin="anonymous"
  />
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"
  ></script>
  <title>title</title>
  <style>
    body {
      margin: 0;
      padding: 0;
      font-family: "Times New Roman", Times, serif;
      background-color: #021526;
      color: white;
    }
    .search {
      width: 150px;
      height: 40px;
      border: 1px solid gray;
      border-radius: 10px;
      padding: 5px;
    }
  </style>
</head>
<body>
  <!--header-->
  <!--welcom user-->
  <header>
    <nav class="navbar">
      <a class="navbar-brand text-white"
        ><h1 class="d-inline-block mx-2"><b>user</b></h1></a
      >
      <div class="nav mx-2">
        <div class="search mx-1 bg-info"><i class="fa fa-search"></i></div>
        <a class="nav-link" href="#"><i class="fa-solid fa-bell"></i></a>

        <a class="nav-link" href="#"><i class="fa-solid fa-user"></i></a>

        <a class="nav-link" href="#"><i class="fa-solid fa-gear"></i></a>
      </div>
    </nav>
  </header>
  <!--header-->
  <!--main-->
  <div class="container-fluid" style="width: 95%; margin: 0 auto">
    <div class="row flex-nowrap">
      <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 bg-black">
        <div
          class="d-flex flex-column align-items-center align-items-sm-start pt-2 text-white min-vh-100"
        >
          <img src="/images/22.png" class="mx-auto image" />
          <h6 class="mx-auto"><%= username %></h6>

          <div class="search text-white bg-info text-center mx-auto">
            View Profile
          </div>
          <ul
            class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start"
            id="menu"
          >
            <li>
              <a href="userDashboard" class="nav-link px-0 align-middle">
                <i class="fa-solid fa-table-columns mx-2 text-white"></i>
                <span class="ms-1 d-none d-sm-inline p-2 text-white"
                  >Dashboard</span
                ></a
              >
            </li>
            <li>
              <a href="user/requests" class="nav-link px-0 align-middle">
                <i class="fa-solid fa-chalkboard mx-2 text-info"></i>
                <span class="ms-1 d-none d-sm-inline p-2 text-info"
                  >Requests</span
                >
              </a>
            </li>

            <li>
              <a href="user/add" class="nav-link px-0 align-middle">
                <i class="fa-solid fa-calendar-days mx-2 text-info"></i>
                <span class="ms-1 d-none d-sm-inline p-2 text-info"
                  >New Request</span
                ></a
              >
            </li>
            <li>
              <a href="user/profile" class="nav-link px-0 align-middle">
                <i class="fa-solid fa-user mx-2 text-info"></i>

                <span class="ms-1 d-none d-sm-inline p-2 text-info"
                  >Profile</span
                ></a
              >
            </li>
            <li>
              <a href="user/notifmessages" class="nav-link px-0 align-middle">
                <i class="fa-regular fa-message mx-2 text-info"></i>
                <span class="ms-1 d-none d-sm-inline p-2 text-info"
                  >Notification</span
                >
              </a>
            </li>
            <hr />
            <li>
              <a href="../signin" class="nav-link px-0 align-middle">
                <i class="fa-solid fa-right-from-bracket mx-2 text-info"></i
                ><span class="ms-1 d-none d-sm-inline text-info">Log Out</span>
              </a>
            </li>
          </ul>
        </div>
      </div>
      <div class="col col-md-9 col-xl-10 maincolor">
        <h1>Your Notifications</h1>
        <div class="notification-list">
          <% notifications.forEach(notification => { %>
          <div
            class="notification-item <%= notification.is_read ? 'read' : 'unread' %>"
          >
            <p><%= notification.message %></p>
            <small><%= notification.created_at.toLocaleString() %></small>
          </div>
          <% }); %>
        </div>
      </div>
    </div>
  </div>
</body>
