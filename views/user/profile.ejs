<body>
  <!--header-->
  <!--welcom user-->
  <header>
    <nav class="navbar">
      <a class="navbar-brand text-white"
        ><h1 class="d-inline-block mx-2"><b>user</b></h1></a
      >
      <div class="nav mx-2">
        <div class="search mx-1 bg-info"><i class="fa fa-search"></i></div>
        <a class="nav-link" href="#"><i class="fa-solid fa-bell"></i></a>

        <a class="nav-link" href="#"><i class="fa-solid fa-user"></i></a>

        <a class="nav-link" href="#"><i class="fa-solid fa-gear"></i></a>
      </div>
    </nav>
  </header>
  <!--header-->
  <!--main-->
  <div class="container-fluid" style="width: 95%; margin: 0 auto">
    <div class="row flex-nowrap">
      <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 bg-black">
        <div
          class="d-flex flex-column align-items-center align-items-sm-start pt-2 text-white min-vh-100"
        >
          <img src="/images/22.png" class="mx-auto image" />
          <h6 class="mx-auto"></h6>
          
          <div class="search text-white bg-info text-center mx-auto">
            View Profile
          </div>
          <ul
            class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start"
            id="menu"
          >
            <li>
              <a href="userDashboard" class="nav-link px-0 align-middle">
                <i class="fa-solid fa-table-columns mx-2 text-white"></i>
                <span class="ms-1 d-none d-sm-inline p-2 text-white"
                  >Dashboard</span
                ></a
              >
            </li>
            <li>
              <a href="user/requests" class="nav-link px-0 align-middle">
                <i class="fa-solid fa-chalkboard mx-2 text-info"></i>
                <span class="ms-1 d-none d-sm-inline p-2 text-info"
                  >Requests</span
                >
              </a>
            </li>
            
            <li>
              <a href="user/add" class="nav-link px-0 align-middle">
                <i class="fa-solid fa-calendar-days mx-2 text-info"></i>
                <span class="ms-1 d-none d-sm-inline p-2 text-info"
                  >New Request</span
                ></a
              >
            </li>
            <li>
              <a href="user/profile" class="nav-link px-0 align-middle">
                <i class="fa-solid fa-user mx-2 text-info"></i>
               
                <span class="ms-1 d-none d-sm-inline p-2 text-info"
                  >Profile</span
                ></a
              >
            </li>
            <li>
              <a href="user/notifmessages" class="nav-link px-0 align-middle">
                <i class="fa-regular fa-message mx-2 text-info"></i>
                <span class="ms-1 d-none d-sm-inline p-2 text-info"
                  >Notification</span
                >
              </a>
            </li>
            <hr />
            <li>
              <a href="../signin" class="nav-link px-0 align-middle">
                <i class="fa-solid fa-right-from-bracket mx-2 text-info"></i
                ><span class="ms-1 d-none d-sm-inline text-info">Log Out</span>
              </a>
            </li>
          </ul>
        </div>
      </div>
        <div class="col col-md-9 col-xl-10 maincolor">
          <h1>User Profile</h1>
          <form action="/user/profile/" method="POST"  class="card p-3 w-50">
            <div class="mb-3">
              <label class="form-label">userId:</label><br />
              <input type="text" name="userId" value="<%= user.id %>"  class="form-control" required />
            </div>
            <div class="mb-3">
              <label class="form-label">userName:</label><br />
              <input type="text" name="userName" value="<%= user.username %>"  class="form-control" required />
            </div>
            <div class="mb-3">
              <label class="form-label">role:</label><br />
              <input type="text" name="userRole"  value="<%= user.role %>" class="form-control" required />
            </div>
            <div class="mb-3">
              <label class="form-label">first Name:</label><br />
              <input type="text" name="firstName" value="<%= user.first_name %>" class="form-control" required />
            </div>
            <div class="mb-3">
              <label class="form-label">Last Name:</label><br />
              <input type="text" name="lastName" value="<%= user.last_name %>"class="form-control" required />
            </div>
            <div class="mb-3">
              <label class="form-label">Phone:</label><br />
              <input type="text" name="userPhone"   value="<%= user.phone_number %>" class="form-control" required />
            </div>
            <div class="mb-3">
              <label class="form-label">email:</label><br />
              <input type="text" name="userEmail"  value="<%= user.email %>" class="form-control" required />
            </div>
            <div class="mb-3">
              <label class="form-label">Date Of Birth:</label>
              <input type="date" name="date_birth" value="<%= user.date_of_birth %>"class="form-control" required />
            </div>
            <button class="btn btn-success">edit User</button>
          </form>
          </div>
        </div>
      </div>
    </div>
    <!--main-->
  </body>
</html>
