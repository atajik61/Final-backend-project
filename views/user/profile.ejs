  <style>
    body {
      margin: 0;
      padding: 0;
      font-family: "Times New Roman", Times, serif;
      background-color: #021526;
      color: white;
    }
    .search {
      width: 150px;
      height: 40px;
      border: 1px solid gray;
      border-radius: 10px;
      padding: 5px;
    }
  </style>
